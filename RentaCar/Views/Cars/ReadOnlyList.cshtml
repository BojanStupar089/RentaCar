

@{
    ViewBag.Title = "ReadOnlyList";
}

<h1 class="mt-5">Cars ReadOnly</h1>

<table id="cars" class="table  table-striped mt-5">
    <thead>
    <tr>
        <th>
         Manufacturer
        </th>
        <th>
           Model
        </th>
        <th>
           License Plate
        </th>
        <th>
          Year
        </th>
        <th>
           Available
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody></tbody>
    </table>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js"></script>

    <script>
    $(document).ready(function () {

        var table = $("#cars").DataTable({

            "ajax": {
                "url":"/cars/GetData",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [

                { "data":"Manufacturer" },
                { "data":"Model" },
                { "data":"LicensePlate" },
                { "data":"Year" },
                { "data": "Available" },
                {
                    "data": "CarId", "render": function (data) {

                        var myUrl = '@Url.Action("Details","Cars")/' + data;
                        return '<a href=\"' + myUrl + '\"class=\"btn btn-default btn-sm text-primary\">Details</a>';
                    }
                }
            ],

        });



    });


    </script>
}
