@model RentaCar.Models.Car

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3 class="mt-5"> Add Car</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Manufacturer, htmlAttributes: new { @class = "col-form-label-lg" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Manufacturer, new { htmlAttributes = new { @class = "form-control fs-5",@required="required" } })
            @Html.ValidationMessageFor(model => model.Manufacturer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "col-form-label-lg" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control fs-5",@required="required" } })
            @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LicensePlate, htmlAttributes: new { @class = "col-form-label-lg" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LicensePlate, new { htmlAttributes = new { @class = "form-control fs-5",@required="required"} })
            @Html.ValidationMessageFor(model => model.LicensePlate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "col-form-label-lg" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control fs-5" } })
            @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Available, htmlAttributes: new { @class = "col-form-label-lg" })
        <div class="col-md-10">
            <div class="checkbox">
                <span class="fs-5">True</span> @Html.RadioButtonFor(model => model.Available, true,new {@checked="checked" })
                <span class="fs-5 ms-3">False</span> @Html.RadioButtonFor(model => model.Available, false)
                @Html.ValidationMessageFor(model => model.Available, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-outline-dark" />
        </div>
    </div>
}

<div class="mt-5 fs-5">
    @Html.ActionLink("Back to Cars", "Index")
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
