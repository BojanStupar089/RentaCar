<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/bootstrap.bundle.min.js")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark fixed-top">
        <div class="container-fluid">

            <a class="navbar-brand text-light fs-4" href="/Home">RENTACAR</a>
            <button class="navbar-toggler text-uppercase font-weight-bold bg-light text-dark rounded collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarAB" aria-controls="navbarAB" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <span class="navbar-toggler-icon "></span>


            </button>

            <div class="collapse navbar-collapse" id="navbarAB">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">


                        <a class="nav-link text-decoration-none  text-light fs-4" href="/Home">Home</a>
                        <span class="visually-hidden">(current)</span>

                    </li>
                    <li class="nav-item">

                        <a class="nav-link text-light text-decoration-none  fs-4" href="/Rentals/Create">New Rental</a>
                    </li>
                    <li class="nav-item">

                        <a class="nav-link text-light text-decoration-none  fs-4" href="/Cars">Cars</a>
                    </li>
                    <li class="nav-item">

                        <a class="nav-link text-light text-decoration-none  fs-4" href="/Customers">Customers</a>
                    </li>

                </ul>

                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link text-light text-decoration-none  fs-4" href="/Rentals"><span class="glyphicon glyphicon-user glyphicon-text-color-light"></span>SignUp</a>
                    </li>



                    <li class="nav-item">
                        <a class="nav-link text-light text-decoration-none  fs-4" href="https://www.fkcrvenazvezda.com"><span class="glyphicon glyphicon-log-in"></span>Login</a>
                    </li>
                </ul>



            </div>
        </div>





    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RENTA CAR </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>