
@model IEnumerable<RentaCar.Models.Customer>

@{
    ViewBag.Title = "ReadOnlyList";
}

<h1 class="mt-5">Customers read only</h1>

<table id="customers" class="table  table-striped mt-5">
    <tr class="table-dark fs-5">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DriverLicNo)
        </th>
    </tr>
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <tbody></tbody>
</table>

@section scripts{

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js"></script>

    <script>
        $document.ready(function () {

            var table = $('#customers').DataTable({
                "ajax": {
                    "url": "/customers/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Name" },
                    { "data": "DriverLicNo" },

                        {
                        "data": "CustomerId","render": function (data) {
                             var myUrl = '@Url.Action("Details","Customers")/' + data;
                        return '<a href=\"' + myUrl + '\"class=\"btn btn-default btn-sm\">Details</a>';

                        }

                    }

                ],
              });
        });
    </script>
}



