@model RentaCar.Models.Rental

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3 class="mt-5"> Add Rental</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group mt-1">
        @Html.LabelFor(model => model.CustomerId, "Customers", htmlAttributes: new { @class = "col-form-label-lg  " })
        <div class="col-md-10">
            @Html.DropDownList("CustomerId", null, htmlAttributes: new { @class = "form-select fs-5 " })
            @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-1">
        @Html.LabelFor(model => model.CarId, "Car Models", htmlAttributes: new { @class = "col-form-label-lg " })
        <div class="col-md-10">
            @Html.DropDownList("CarId", null, htmlAttributes: new { @class = "form-select fs-4" })
            @Html.ValidationMessageFor(model => model.CarId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-1">
        @Html.LabelFor(model => model.DateRented, htmlAttributes: new { @class = "col-form-label-lg" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateRented, new { htmlAttributes = new { @class = "form-control fs-5" } })
            @Html.ValidationMessageFor(model => model.DateRented, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-1">
        @Html.LabelFor(model => model.DateReturned, htmlAttributes: new { @class = " col-form-label-lg" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateReturned, new { htmlAttributes = new { @class = "form-control fs-5" } })
            @Html.ValidationMessageFor(model => model.DateReturned, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-4 fs-5">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-outline-dark  " />
        </div>
    </div>
}

<div class="mt-4 fs-5">
    @Html.ActionLink("Back to Rentals", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
